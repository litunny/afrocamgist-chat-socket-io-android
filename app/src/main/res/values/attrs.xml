<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ToolDotProgress">
        <attr name="color" format="color" />
        <attr name="count" format="integer" />
        <attr name="timeout" format="integer" />
    </declare-styleable>

    <declare-styleable name="StoriesProgressView">
        <attr name="progressCount" format="integer|reference" />
    </declare-styleable>

    <declare-styleable name="InstaTag">
        <attr name="canWeAddTags" format="boolean" />
        <!--Used for restricting tag movement inside RecyclerView-->
        <attr name="overrideDefaultColor" format="color" />
        <!--Used for changing default color for tag backGround and carrots-->
        <attr name="instaTextColor" format="color" />
        <!--Used for changing InstaTag text Color-->
        <attr name="instaBackgroundColor" format="color" />
        <!--Used for changing background color for tag background-->
        <attr name="carrotTopColor" format="color" />
        <!--Used for changing top carrot color-->
        <attr name="carrotLeftColor" format="color" />
        <!--Used for changing left carrot color-->
        <attr name="carrotRightColor" format="color" />
        <!--Used for changing right carrot color-->
        <attr name="carrotBottomColor" format="color" />
        <!--Used for changing bottom carrot color-->
        <attr name="showAllCarrots" format="boolean" />
        <!--Used for showing all the carrots or show carrots based upon tags position-->
        <attr name="tagTextBackground" format="reference" />
        <!--Used for changing tag background-->
        <attr name="carrotLeftBackground" format="reference" />
        <!--Used for replacing left carrot background with custom background-->
        <attr name="carrotRightBackground" format="reference" />
        <!--Used for replacing right carrot background with custom background-->
        <attr name="carrotTopBackground" format="reference" />
        <!--Used for replacing top carrot background with custom background-->
        <attr name="carrotBottomBackground" format="reference" />
        <!--Used for replacing bottom carrot background with custom background-->
        <attr name="hideAnimation" format="reference" />
        <!--Used for animating tag while hiding-->
        <attr name="showAnimation" format="reference" />
        <!--Used for animating tag while showing-->
        <attr name="likeColor" format="color" />
        <!--Used for setting like color-->
        <attr name="likeSize" format="dimension" />
        <!--Used for setting like size-->
        <attr name="likeSrc" format="reference" />
        <!--Used for setting source for like-->
    </declare-styleable>

    <declare-styleable name="InsLoadingViewAttr">
        <attr name="rotate_duration" format="integer" />
        <attr name="circle_duration" format="integer" />
        <attr name="start_color" format="color" />
        <attr name="end_color" format="color" />
        <attr name="status" >
            <enum name="loading" value="0" />
            <enum name="clicked" value="1" />
            <enum name="unclicked" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="SocialViewStyle">
        <attr name="socialViewStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="SocialView">
        <!-- Determine whether each feature should be turned on/off.
             Default is `hashtag|mention|hyperlink`. -->
        <attr name="socialFlags">
            <flag name="hashtag" value="1" />
            <flag name="mention" value="2" />
            <flag name="hyperlink" value="4" />
        </attr>

        <!-- Color of each feature.
             If particular feature is not enabled, this value will be ignored.
             Default is color accent of current theme. -->
        <attr name="hashtagColor" format="color" />
        <attr name="mentionColor" format="color" />
        <attr name="hyperlinkColor" format="color" />
    </declare-styleable>

</resources>